@model UserView
@{
    ViewData["Title"] = "Login";
}
    <div class="p-2 mt-4">
        <form asp-controller="User" asp-action="Login" method="post">
        @{
            if (TempData["error"] != null)
            {
                <h3>Message: @TempData["error"]</h3>
            }
        }

            <div class="mb-3">
                <label class="form-label" for="username">Email</label>
            <input asp-for="email" class="form-control" type="email" placeholder="Enter Email" name="Email" id="email">
            <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="float-end">
                    <a href="auth-recoverpw.html" class="text-muted">Forgot password?</a>
                </div>
                <label class="form-label" for="userpassword">Password</label>
                <input asp-for="password" class="form-control" type="password" placeholder="Enter password" name="password" id="password">
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="mt-3 text-end">
                <button class="btn btn-primary w-sm waves-effect waves-light" type="submit">Log In</button>
            </div>
        </form>
    </div>


