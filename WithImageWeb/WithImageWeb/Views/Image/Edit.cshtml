
@{
    ViewData["Title"] = "Edit";
}

@model ImageModel

<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Image</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> @*display all the validation at a time*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" type="text" />
            <span asp-validation-for="Name" class="text-danger"></span> @*display specific the validation at a time*@
        </div>
        <div class="mb-3">
            <label asp-for="FileName"></label>
            <input asp-for="FileName" class="form-control" type="file" />
            <span asp-validation-for="FileName" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit" style="width:150px;">Update</button>
        <a asp-controller="Image" asp-action="Index" class="btn btn-secondary" style="width:150px;">Go Back</a>
    </div>
</form>

@*client side validation*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}




